#include <stdio.h>
#define pi 3.1415926535

int main(void) {
	float radius = 0;
	float area = 0;
	
	printf("원의 넓이(면적)를 구하는 프로그램(v1.0)\n\n");

	printf("번지름을 입력해주세요...\n반지름 입력: ");
	scanf_s("%f", &radius);

	area = radius * radius * pi;

	printf("원의 반지름이 %f 일 때, 원의 넓이(면적)은 %f입니다.\n", radius, area);

	printf("\n\n프로그램 개발 및 문의: hck1103@daelim.ac.kr\n");
	return 0;
}
